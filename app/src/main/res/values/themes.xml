<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for day mode -->
    <style name="Theme.Next" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primary</item>
        <!-- Customize other attributes for day theme here -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="textAppearanceHeadline6">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your day/night theme here -->
    </style>
</resources>
