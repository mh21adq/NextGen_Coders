<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode -->
    <style name="Theme.Next" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Adjust colors for night mode -->
        <item name="colorPrimary">@color/primaryNight</item>
        <item name="colorPrimaryVariant">@color/primaryVariantNight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/secondaryNight</item>
        <item name="colorSecondaryVariant">@color/secondaryVariantNight</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color for night mode -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primaryNight</item>
        <!-- Customize other attributes for night theme here -->
    </style>
</resources>
